<% if logged_in? %>
  	<div class="login"><%= link_to current_user.username, current_user %></div>
  	<div class="login"><%= link_to "Log out", logout_path %></div>
<% else %>
	<div class="login"><%= link_to "Login", login_path %></div>
  	<div class="signup"><%= link_to "Register", signup_path %></div>  
<% end %>
