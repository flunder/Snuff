<% content_for :localnav do %>
	<h2><%=@headline%></h2>
<% end %>

<% if logged_in? %>  
	<%= link_to 'New', new_item_path, :id => 'newSnuff' %>
<% end %>

<!-- handle thumbnail sizes -->
<% if current_page?(:size => 'large')  %>
	<% @view = 'large' %>
<% else %>
	<% @view = 'small' %>
<% end %>

<%= render(:partial => "item", :collection => @items) %>

<%= will_paginate(@items) %>
<%= pageless(@items.total_pages, items_path) %>