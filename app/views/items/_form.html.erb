<div class="row">
	<%= f.error_messages %>
</div>

<div class="row">
    <%= f.label :name, 'Name:' %>
    <%= f.text_field :name, :id => 'sF_name'  %>
</div>

<div class="row">
     <%= f.label :blurber, 'MyBlurb:' %>
     <%= f.text_area :blurber, :id => 'sF_blurb' %>
</div>

<div class="row">
	<%= f.label :image_url, 'Image url:' %>
	<%= f.text_field :image_url, :id => 'sF_extphoto' %>
</div>

<div class="row">
	<%= f.label :photo, 'Image upload:' %>
	<%= f.file_field :photo, :id => 'sF_photo' %>
</div>

<div class="row">
	<%= f.label :project_id, 'Project:' %>
	<% @projects = current_user.projects %>
	<% if !@projects.empty? %>
		<%= collection_select("item", "project_id", @projects, :id, :name, :prompt => ""  ) %>
	<% else %>
		no projects created yet, create one <%= link_to projects_path, :controller => "projects", :action => "new" %>
		
	<% end %>
</div>

<div class="row">
	<%= f.label :snuffltype, 'Type' %>
	<%= f.select :snuffltype, ["General","Design","Code"] %>
</div>

<div class="row">
     <%= f.label :from, 'Pinched from:' %>
     <%= f.text_field :from, :id => 'sF_url' %>
</div>

<div class="row">
     <%= f.label :private, 'Private?' %>
     <%= f.check_box :private, :id => 'sF_private' %>
</div>

<div class="row">
	<%= f.label 'Tag List (use ,)' %>
	<%= f.text_field :tag_list %>
</div>

<div class="row">
	<%= f.submit 'Save', :id => 'sF_create' %>
</div>
